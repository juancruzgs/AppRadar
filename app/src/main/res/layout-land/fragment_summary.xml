<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="@dimen/summary_fragment_padding_landscape"
    android:paddingRight="@dimen/summary_fragment_padding_landscape">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingRight="@dimen/summary_fragment_padding_landscape_intern"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_view_next_text"
            android:id="@+id/text_view_next"
            android:layout_gravity="left" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/elements_spacer" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_distance"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_distance_height"
            card_view:cardCornerRadius="@dimen/card_view_corner_radius">

            <TextView
                android:id="@+id/text_view_distance"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_view_distance_value"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/typography_display_3"/>
        </android.support.v7.widget.CardView>

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/elements_spacer" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/text_view_refresh_time_text"
            android:id="@+id/text_view_refresh_time" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/summary_fragment_padding_landscape_intern"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/text_view_speed_limit_text"
            android:id="@+id/text_view_speed_limit"
            android:layout_gravity="left" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="@dimen/elements_spacer" />

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/card_view_speed_limit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/card_view_speed_limit_height_landscape"
            card_view:cardCornerRadius="@dimen/card_view_corner_radius">

            <TextView
                android:id="@+id/text_view_speed_limit_value"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="@string/text_view_speed_limit_value_text"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="@dimen/typography_speed_limit"
                android:background="@drawable/speed_limit_ring" />
        </android.support.v7.widget.CardView>
    </LinearLayout>

</LinearLayout>