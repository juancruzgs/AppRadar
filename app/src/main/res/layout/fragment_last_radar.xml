<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:paddingLeft="@dimen/summary_fragment_padding"
              android:paddingRight="@dimen/summary_fragment_padding"
              android:id="@+id/Layout_Main"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_view_last_radar_title"
        android:id="@+id/text_view_last_radar_title"
        android:layout_margin="10dp"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_view_last_radar_text"
        android:id="@+id/text_view_last_radar_text"
        android:layout_marginTop="@dimen/elements_spacer"/>

</LinearLayout>